{
  "name": "@brendanlaschke/vue-simple-gantt",
  "version": "0.2.1",
  "description": "A flexible Gantt chart library for Vue 3 with TypeScript",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brendanlaschke/simple-vue-gantt.git"
  },
  "type": "module",
  "main": "./dist/vue-gantt.umd.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./vue-simple-gantt.css": "./dist/vue-simple-gantt.css",
    ".": {
      "require": "./dist/vue-gantt.umd.cjs",
      "import": "./dist/vue-gantt.js",
      "style": "./dist/vue-simple-gantt.css"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "oxlint src",
    "format": "oxfmt src",
    "format:check": "oxfmt --check src",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest --project=storybook",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "vue",
    "gantt",
    "chart",
    "timeline",
    "project-management",
    "typescript"
  ],
  "author": "Brendan Laschke",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-vitest": "^10.1.8",
    "@storybook/vue3-vite": "^10.1.8",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/browser-playwright": "^4.0.5",
    "@vitest/coverage-v8": "^4.0.5",
    "oxfmt": "^0.17.0",
    "oxlint": "^1.32.0",
    "playwright": "^1.57.0",
    "storybook": "^10.1.8",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.5",
    "vue": "^3.5.25",
    "vue-tsc": "^3.1.8"
  },
  "sideEffects": [
    "*.css"
  ],
  "dependencies": {
    "overlayscrollbars": "^2.13.0",
    "overlayscrollbars-vue": "^0.5.9"
  }
}
