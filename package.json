{
  "name": "@leitart/vue-gantt",
  "version": "0.1.0",
  "description": "A flexible Gantt chart library for Vue 3 with TypeScript",
  "type": "module",
  "main": "./dist/vue-gantt.umd.cjs",
  "module": "./dist/vue-gantt.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-gantt.js",
      "require": "./dist/vue-gantt.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "oxlint src",
    "format": "oxfmt src",
    "format:check": "oxfmt --check src",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest --project=storybook"
  },
  "keywords": [
    "vue",
    "gantt",
    "chart",
    "timeline",
    "project-management",
    "typescript"
  ],
  "author": "Leitart",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.15",
    "@storybook/addon-docs": "^9.1.15",
    "@storybook/addon-onboarding": "^9.1.15",
    "@storybook/addon-vitest": "^9.1.15",
    "@storybook/vue3-vite": "^9.1.15",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/browser-playwright": "^4.0.3",
    "@vitest/coverage-v8": "^4.0.3",
    "oxfmt": "^0.8.0",
    "oxlint": "^1.24.0",
    "playwright": "^1.56.1",
    "storybook": "^9.1.15",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.8.0",
    "vitest": "^4.0.3",
    "vue": "^3.4.0",
    "vue-tsc": "^2.0.0"
  }
}
