{
  "name": "@brendanlaschke/vue-simple-gantt",
  "version": "0.1.0",
  "description": "A flexible Gantt chart library for Vue 3 with TypeScript",
  "type": "module",
  "main": "./dist/vue-gantt.umd.cjs",
  "module": "./dist/vue-gantt.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "oxlint src",
    "format": "oxfmt src",
    "format:check": "oxfmt --check src",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest --project=storybook",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "vue",
    "gantt",
    "chart",
    "timeline",
    "project-management",
    "typescript"
  ],
  "author": "Brendan Laschke",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@storybook/addon-vitest": "^10.0.2",
    "@storybook/vue3-vite": "^10.0.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/browser-playwright": "^4.0.5",
    "@vitest/coverage-v8": "^4.0.5",
    "oxfmt": "^0.9.0",
    "oxlint": "^1.25.0",
    "playwright": "^1.56.1",
    "storybook": "^10.0.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.5",
    "vue": "^3.5.22",
    "vue-tsc": "^3.1.2"
  }
}
